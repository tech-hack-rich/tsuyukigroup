<%= render "shared/header" %>
<%= form_with url: informations_path do |f| %>

  <div class="form-group">
    <%= f.label :name, 'お名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name_spell, 'フリガナ' %>
    <%= f.text_field :name_spell, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :birthdate, '生年月日' %>
    <%= raw sprintf(
                f.date_select(
                  :birthdate,
                  class:'date',
                  use_month_numbers: true,
                  prompt:'--',
                  start_year: (Time.now.year)-75,
                  end_year: (Time.now.year),
                  date_separator: '%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :motivation, '志望動機など' %>
    <%= f.text_area :motivation,  class: 'form-control' %>
  </div>

  <%= f.submit '送信' %>

<% end %>
<%= render "shared/footer" %>